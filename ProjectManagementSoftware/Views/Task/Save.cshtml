@using ProjectManagementSoftware.Models
@model TaskAdd
@{
    ViewBag.Title = "Save";
    List<Project> listofprojects = ViewBag.Projects;
    List<UserDetails> userlists = ViewBag.Users;
    
    
}

<h2>Save</h2>



<div>
    @if (ViewBag.SuccessMessage != null)
    {
        <div>
            <span>@ViewBag.SuccessMessage</span>
        </div>

    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="success ">
            <span class="has-error">@ViewBag.ErrorMessage</span>
        </div>
    }


</div>

<form class="form-horizontal" id="form-User" method="POST" enctype="multipart/form-data">

    <div class="form-group">
        <label class="control-label col-sm-3" for="ProjectId">Select Project:</label>
        <div class="col-sm-6">

            <select class="form-control" name="ProjectId" id="ProjectId">
                <option value="">--Select project--</option>
                @foreach (var pr in listofprojects)
                {
                    <option value="@pr.Id">@pr.Name</option>
                }
            </select>
        </div>
        <div class="3"></div>
    </div>


    <div class="form-group">
        <label class="control-label col-sm-3" for="UserId"> Assign to :</label>
        <div class="col-sm-6">

            <select class="form-control" name="UserId" id="UserId">
                <option value="">--Select User--</option>
                @foreach (var ul in userlists)
                {
                    <option value="@ul.Id">@ul.Name</option>
                }
            </select>
            
          
        </div>
        <div class="3"></div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-3" for="Description"> Description :</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="Description" name="Description" placeholder="Enter Description">
        </div>
        <div class="3"></div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-3" for="Due">Due Date :</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" id="Due" name="Due" placeholder="Enter Due Date">
        </div>
        <div class="3"></div>
    </div>
  

    <div class="form-group">
        <label class="control-label col-sm-3" for="Priority"> Priority:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="Priority" name="Priority" placeholder="Set as High Medium or Low">
        </div>
        <div class="3"></div>

    </div>

   

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>
