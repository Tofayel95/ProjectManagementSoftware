<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Project Management Tool </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/MasterDesign.css" rel="stylesheet" />
    

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
           
            <div class="navbar-collapse collapse">
                
                <div class="dropdown">
                    <button class="dropbtn">Home</button>
                    <div class="dropdown-content">

                        @Html.ActionLink("Home", "Index", "Home")
                    </div>
                </div>

                <div class="dropdown">
                    <button class="dropbtn">User</button>
                    <div class="dropdown-content">

                        @Html.ActionLink("AddUser", "Save", "User")
                    </div>
                </div>

                <div class="dropdown">
                    <button class="dropbtn">Project</button>
                    <div class="dropdown-content">
                       
                        @Html.ActionLink("Project", "Save", "Project")
                       @Html.ActionLink("Assign Person & Project", "Assign", "AssignPerson")
                        @Html.ActionLink("View project", "Details", "Project")

                    </div>
                </div>
                
                <div class="dropdown">
                    <button class="dropbtn">Task</button>
                    <div class="dropdown-content">
                        @Html.ActionLink("Create Task", "Save", "Task")

                        @Html.ActionLink("Comment", "Comment", "Task")

                        @Html.ActionLink("View Comment Task", "ViewComment", "Task")
                      
                          
                    </div>
                </div>
                

         
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - <b>Management Tool for Managing Software Projects</b> </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
